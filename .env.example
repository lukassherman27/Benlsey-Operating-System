# Bensley Intelligence Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_PATH=/path/to/your/bensley_master.db
DATABASE_URL=sqlite:///path/to/your/bensley_master.db

# For production, use PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/bensley

# Neo4j Graph Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Email Configuration
EMAIL_SERVER=mail.bensley.com
EMAIL_PORT=587
EMAIL_USER=system@bensley.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=system@bensley.com
EMAIL_USE_TLS=true

# n8n Automation
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_n8n_password

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Security
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
API_KEY=your-api-key-for-external-access
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Feature Flags
ENABLE_AI_CLASSIFICATION=true
ENABLE_AUTO_LINKING=true
ENABLE_PATTERN_LEARNING=true
ENABLE_REAL_TIME_PROCESSING=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/bensley/api.log

# Dashboard URL
DASHBOARD_URL=http://localhost:3000

# Environment
ENVIRONMENT=development
DEBUG=true
